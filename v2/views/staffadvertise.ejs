<!DOCTYPE HTML>
<html lang="en">
	<head>
		<title>Staff Panel | Advertise</title>
		<%- include("partials/head.ejs") %>
        <meta name="description" content="Expand your bots potential with disbot.top. Add your bot to our list and have it seen by heaps of people around the universe!" />
		<meta property="og:title" content="Staff Panel | Advertise" />
		<link rel="stylesheet" href="/assets/main.css" />
	</head>
	<body>
		<div id="wrapper">
			<div id="main">
				<div class="inner">
					<header id="header">
                        <%- include("partials/header.ejs", { discordInfo: discordInfo }) %>
					</header>
					<!-- ---------------------- -->
					<section id="home-section">
                        <%- include("partials/staffheader.ejs", { discordInfo: discordInfo, alerts: alerts }) %>
                        <div id="container55" class="container default">
                            <div class="wrapper">
                                <div class="inner">
                                    <p id="text282">Current Advertisements</p>
                                    <hr id="divider98">
                                    <div id="table05" class="table-wrapper">
                                        <div class="table-inner">
                                            <table>
                                                <thead>
                                                    <tr>
														<th>ID</th>
                                                        <th>Title</th>
                                                        <th>External Link</th>
														<th>Expire Date</th>
														<th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
													<% ads.forEach(element => { %>
														<% let newDate = new Date(element.expireDate).toLocaleString() %>
														<tr>
															<td><%= element.id %></a></td>
															<td><%= element.title %></a></td>
															<td><%= element.extLink %></td>
															<td><%= newDate %></td>
															<td><a href="/backend/advertise/<%= element.id %>/remove">Remove</a></td>
														</tr>
													<% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

						<div id="container55" class="container default">
                            <div class="wrapper">
                                <div class="inner">
                                    <p id="text282">Add Advertisement</p>
                                    <hr id="divider98">
                                    <form enctype="application/x-www-form-urlencoded" id="form23" method="post" action="/backend/advert/add" autocomplete="off">
                                        <div class="inner">
                                            <div class="field">
                                                <input type="text" name="adTitle" id="form23-ad-title" placeholder="Title" maxlength="256" required />
                                            </div>
                                            <div class="field">
                                                <input type="text" name="adDesc" id="form23-ad-desc" placeholder="Short Description" maxlength="256" required />
                                            </div>
											<div class="field">
                                                <input type="text" name="adLink" id="form23-ad-link" placeholder="External Link" maxlength="256" required />
                                            </div>
											<div class="field">
                                                <input type="text" name="adImage" id="form23-ad-image" placeholder="Image Link" maxlength="256" required />
                                            </div>
											<div class="field">
                                                <input type="text" name="adOwner" id="form23-ad-owner" placeholder="Discord ID" maxlength="256" required />
                                            </div>
                                            <div class="field">
                                                <select name="expiredate" id="form23-expire-date" required>
													<option value="">Select a Expire Date</option>
													<option value="30">30 Days - (1 Month)</option>
													<option value="60">60 Days - (2 Months)</option>
                                                    <option value="90">90 Days - (3 Months)</option>
                                                    <option value="365">365 Days - (1 Year)</option>
                                                    <% if(discordInfo.id == "329858985589080064") { %>
                                                        <option value="9999">Lifetime</option>
                                                    <% } %>
                                                </select>
                                            </div>
                                            <div class="actions">
                                                <button type="submit" style="width: 50rem;">Add</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
					</section>
					<!-- ---------------------- -->
					<footer id="footer">
                        <%- include("partials/footer.ejs") %>
					</footer>
				</div>
			</div>
		</div>
		<script src="/assets/main.js"></script>
	</body>
</html>